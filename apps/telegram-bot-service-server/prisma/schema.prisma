datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Chat {
  chatId    String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  messages  Message[]
  summaries Summary[]
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model Summary {
  chat      Chat?    @relation(fields: [chatId], references: [id])
  chatId    String?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Message {
  chat      Chat?     @relation(fields: [chatId], references: [id])
  chatId    String?
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
}

model User {
  chats      Chat[]
  createdAt  DateTime @default(now())
  email      String?  @unique
  firstName  String?
  id         String   @id @default(cuid())
  lastName   String?
  name       String?
  password   String
  roles      Json
  telegramId String?
  updatedAt  DateTime @updatedAt
  username   String   @unique
}
